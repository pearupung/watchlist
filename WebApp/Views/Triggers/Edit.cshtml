@model Domain.Trigger

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Trigger</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TriggerId" />
            <div class="form-group">
                <label asp-for="TriggerName" class="control-label"></label>
                <input asp-for="TriggerName" class="form-control" />
                <span asp-validation-for="TriggerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HabitLoopId" class="control-label"></label>
                <select asp-for="HabitLoopId" class="form-control" asp-items="ViewBag.HabitLoopId"></select>
                <span asp-validation-for="HabitLoopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
