@model IEnumerable<Domain.Trigger>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TriggerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HabitLoop)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TriggerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HabitLoop.HabitLoopId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TriggerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TriggerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TriggerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
